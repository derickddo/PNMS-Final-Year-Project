{
    "builds": [
      { "src": "wsgi.py", "use": "@vercel/python" }
    ],
    "functions": {
      "api/**/*.py": { "runtime": "python3.12" }
    },
    "installCommand": "apt-get update && apt-get install -y libpq-dev && pip install pipenv && pipenv sync --system",
    "buildCommand": "python manage.py collectstatic --noinput && gunicorn your_project_name.wsgi"
  }